<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Comidinha Facil{% endblock %}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-iKILG3XNSssCfCrjeOuHscchnVABvkdY7Q8mJcEpkI0Fm46INm2wrccLqTvCK4JIfjJH0L7y1l+0mXNihqQVDg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

<!-- Main Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark  mb-5" style="background-color: #27333A;">
    <div class="container-fluid justify-content-start">
        <a class="navbar-brand" href="{{ path('app_recipes') }}">
            <i class="fas fa-record-vinyl"></i>
            Recipes
        </a>
        <a class="navbar-brand" href="{{ path('app_viewWeeklyIngredients') }}">
            <i class="fas fa-record-vinyl"></i>
            Grocery list
        </a>
    </div>
</nav>
<!-- End Main Navigation -->
{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ message }}
    </div>
{% endfor %}

{% block body %}{% endblock %}

</body>
</html>
